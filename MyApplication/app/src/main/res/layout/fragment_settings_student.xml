<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="io.github.yashladha.project.studentFragments.SettingsStudent">


	<EditText
		android:id="@+id/et_email_changed"
		android:hint="Email"
		android:textSize="22sp"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginRight="8dp"
		android:layout_marginTop="32dp"
		android:ems="10"
		android:inputType="textEmailAddress"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toRightOf="@+id/rb_email_change"
		android:layout_marginLeft="8dp"
		app:layout_constraintHorizontal_bias="0.0"/>

	<RadioButton
		android:id="@+id/rb_email_change"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintBaseline_toBaselineOf="@+id/et_email_changed"/>

	<RadioButton
		android:id="@+id/rb_password_change"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="7dp"
		app:layout_constraintBaseline_toBaselineOf="@+id/et_password_changed"
		app:layout_constraintLeft_toLeftOf="parent"/>

	<EditText
		android:hint="Password"
		android:textSize="22sp"
		android:id="@+id/et_password_changed"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="textPassword"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@+id/et_email_changed"
		app:layout_constraintLeft_toRightOf="@+id/rb_password_change"
		android:layout_marginLeft="8dp"/>

	<Button
		android:id="@+id/bt_update_profile"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="32dp"
		android:text="Update Profile"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/et_password_changed"/>
</android.support.constraint.ConstraintLayout>
